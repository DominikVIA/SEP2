<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox prefHeight="400.0" prefWidth="640.0" stylesheets="@../examMaster.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="en.via.sep2_exammaster.view.student.MyExamsViewController">
  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
      <children>
            <Text layoutX="150.0" layoutY="71.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="title" text="My Exams" textAlignment="CENTER" wrappingWidth="340.0">
               <font>
                  <Font name="Avenir Heavy" size="27.0" />
               </font>
            </Text>
            <Button fx:id="viewExamButton" layoutX="90.0" layoutY="343.0" mnemonicParsing="false" onAction="#onViewExam" prefHeight="30.0" prefWidth="460.0" styleClass="normalButton" text="View exam">
               <font>
                  <Font name="Avenir Roman" size="13.0" />
               </font>
            </Button>
            <TabPane layoutX="90.0" layoutY="81.0" prefHeight="257.0" prefWidth="460.0" tabClosingPolicy="UNAVAILABLE">
              <tabs>
                <Tab text="Upcoming">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <ListView prefHeight="230.0" prefWidth="460.0" styleClass="bigListView" />
                           </children>
                        </AnchorPane>
                  </content>
                </Tab>
                <Tab text="Completed">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <ListView prefHeight="230.0" prefWidth="460.0" styleClass="bigListView" />
                           </children>
                        </AnchorPane>
                  </content>
                </Tab>
              </tabs>
            </TabPane>
      </children>
    </AnchorPane>
  </children>
</VBox>
